{
  "name": "formbox-workspace",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.25.0",
  "scripts": {
    "prepare": "husky",
    "build": "pnpm -r run --if-present build",
    "release": "pnpm -r run --if-present build && pnpm changeset publish",
    "dev": "pnpm --filter @formbox/renderer dev",
    "lint": "pnpm -r run --if-present lint",
    "typecheck": "pnpm -r run --if-present typecheck",
    "format": "pnpm -r run --if-present format",
    "test": "pnpm -r run --if-present test",
    "lint-staged": "lint-staged"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.8",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "eslint-plugin-storybook": "^10.1.11",
    "eslint-plugin-unicorn": "^62.0.0",
    "globals": "^17.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0",
    "ts-morph": "^27.0.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.53.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,cts,mts,cjs,mjs,json,css,scss,md,mdx,html,yaml,yml}": "prettier --write"
  },
  "pnpm": {
    "overrides": {
      "react": "19.2.3",
      "react-dom": "19.2.3"
    }
  }
}
